<body>

  <main class="form-signin w-100 m-auto row" style="max-width: 70%;padding: 15px;">
    <h1>
      <% if (card.length > 0) { %>
        <div class="alert alert-danger" role="alert"><%=card%> </div>
      <% } %>
  
      <% if (success.length > 0) { %>
        <div class="alert alert-success" role="alert"><%=success%> </div>
      <% } %>
    </h1>

    <div class="col-7">
      <form method="post" action="/users/addMoney" novalidate class="validated-form">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
          <span class="text-primary"> Add Money Page</span>
        </h4>
        <div class="form-floating mb-3">
          <input type="number" class="form-control" id="enter-money" placeholder="00000" name="money" required>
          <label for="enter-money">Enter Money</label>
        </div>

        <div class="form-floating mb-3">
          <input type="number" class="form-control" id="card-number" placeholder="40000" required name="cardNumber">
          <label for="card-number">Card Number</label>
        </div>

        <div class="form-floating mb-3">
          <input type="date" class="form-control" id="expiry" placeholder="40000" required name="expireDate">
          <label for="expiry">Expire Date</label>
        </div>

        <div class="form-floating mb-3">
          <input type="number" class="form-control" id="cvv" placeholder="40000" required name="cvv">
          <label for="cvv">CVV/CVC</label>
        </div>
<!-- 
        <div class="form-check mb-3 mr-5">
          <div class="btn btn-primary mb-3 mr-auto">
            <span class="ps-20">Payment</span>
            <span class="fas fa-arrow-right"></span>
          </div> -->
          <button class="btn btn-success" type="submit">Pay</button>
        </div>
      </form>
    </div>
  </main>
  <script src="/javascripts/main.js"></script>  
</body>