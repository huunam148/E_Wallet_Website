<body>
  <main>

    <div class="container rounded bg-white mt-5 mb-5">
      <div class="row">
        <div class="col-md-3 border-right">
          <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5"
              width="150px"
              src="<%= user.images[0].url%>"><span
              class="font-weight-bold"><%= user.name %></span><span class="text-black-50"><%= user.email%></span><span>
            </span></div>
        </div>
        <div class="col-md-5 border-right">
          <div class="p-3 py-5">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h4 class="text-right">Profile Settings</h4>
            </div>
            <form method="post" action="/users/updateProfile">
              <div class="row mt-2">
                <div class="col-md-12"><label class="labels">Name</label><input type="text" class="form-control py-2 mt-1"
                    placeholder="Name" value="<%= user.name %>" name="name"></div>
              </div>

              <div class="row">

                <div class="col-md-12 mt-2"><label class="labels">Mobile Number</label><input type="text"
                    class="form-control py-2 mt-1" placeholder="Enter phone number" value="<%= user.phoneNumber%>" name="phoneNumber">
                </div>
  
                <div class="col-md-12 mt-2"><label class="labels">Email</label><input type="email"
                    class="form-control py-2 mt-1" placeholder="Enter email" value="<%= user.email%>" name="email">
                </div>
  
                <div class="col-md-12 mt-2"><label class="labels"><Address>Address</Address></label><input type="text"
                  class="form-control py-2 mt-1" placeholder="Enter Address" value="<%= user.address%>" name="address">
                </div>
  
              <div class="col-md-12 mt-2"><label class="labels">Birthday</label><input type="text"
                class="form-control py-2 mt-1" placeholder="Enter Birthday" value="<%= user.birthday%>" name="birthday">
              </div>

              <div class="mt-3">
                <button class="btn btn-primary profile-button" type="submit">Save Profile</button>
              </div>

            </form>
            

            
            
          </div>
        </div>

      </div>
    </div>
  </main>

</body>