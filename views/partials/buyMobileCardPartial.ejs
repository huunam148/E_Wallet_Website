<body>
  <h1>
    <% if (card.length > 0) { %>
      <div class="alert alert-danger" role="alert"><%=card%> </div>
    <% } %>

    <% if (success.length > 0) { %>
      <div class="alert alert-success" role="alert"><%=success%> </div>
    <% } %>
  </h1>

  <main class="form-signin w-100 m-auto row" style="max-width: 70%;padding: 15px;">

    <div class="col-7">
      <form action="/users/buyCard" method="post" novalidate class="validated-form">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
          <span class="text-primary"> By Moblie Card Page</span>
        </h4>

        <!-- <div class="form-floating mb-3">
          <input type="number" class="form-control" id="enter-money" placeholder="00000">
          <label for="enter-money">Enter money:</label>
        </div> -->

        <div>
          <select required class="form-select form-select mb-3" aria-label=".form-select-lg example" name="card">
            <option selected >Select Mobile Card </option>
            <option value="Viettel" >Viettel</option>
            <option value="Mobifone">Mobifone</option>
            <option value="Vinaphone">Vinaphone</option>
          </select>
        </div>

        <div>
          <select required class="form-select form-select mb-3" aria-label=".form-select-lg example" name="type">
            <option selected>Mobile Card Balance</option>
            <option value="10000"> 10.000 VNĐ </option>
            <option value="20000"> 20.000 VNĐ </option>
            <option value="50000"> 50.000 VNĐ </option>
            <option value="100000"> 100.000 VNĐ </option>
          </select>
        </div>

        <div class="form-floating mb-3">
          <input type="number" class="form-control" id="card-number" placeholder="40000" required name="cardNumber">
          <label for="card-number">Mobile Card Number</label>
        </div>

<!--         <div class="form-floating mb-3">
          <textarea class="form-control" placeholder="transactionFee" id="note" style="height: 100px" required></textarea>
          <label for="note">Transaction Fee</label>
        </div> -->
        <button type="submit" class="btn btn-success">Buy</button>
<!--         <div class="form-check mb-3 mr-5" >
          <div class="btn btn-primary mb-3 mr-auto" >
            <span class="ps-20" >Payment</span>
            <span class="fas fa-arrow-right"></span>
          </div> -->
        </div>
      </form>
    </div>
  </main>

</body>