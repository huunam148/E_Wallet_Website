<body>

  <main class="form-signin w-100 m-auto row" style="max-width: 70%;padding: 15px;">

    <div class="col-7">
      <form>
        <h4 class="d-flex justify-content-between align-items-center mb-3">
          <span class="text-primary">Information</span>
        </h4>
        <div class="form-floating mb-3">
          <input type="number" class="form-control" id="receiver-phone-number" placeholder="00000">
          <label for="receiver-phone-number">Receiver phone number</label>
        </div>

        <div class="form-floating mb-3">
          <input type="number" class="form-control" id="total" placeholder="40000">
          <label for="total">Total</label>
        </div>

        <div class="form-floating mb-3">
          <textarea class="form-control" placeholder="Note" id="note" style="height: 100px"></textarea>
          <label for="note">Note</label>
        </div>

        <div class="form-check mb-3">
          <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
          <label class="form-check-label" for="flexCheckChecked">
            The receiver pays the transaction fee
          </label>
        </div>
      </form>
    </div>

    <!-- ------ -->

    <div class="col-5">
      <div class="order-md-last">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
          <span class="text-primary">Overview</span>
        </h4>
        <ul class="list-group mb-3">
          <li class="py-3 list-group-item d-flex justify-content-between lh-sm">
            <div>
              <h6 class="my-0">Receiver Name</h6>
            </div>
            <span class="text-muted">John Doe</span>
          </li>

          <li class="py-3 list-group-item d-flex justify-content-between lh-sm">
            <div>
              <h6 class="my-0">Receiver Phone</h6>
            </div>
            <span class="text-muted">+(84) 333 555 777</span>
          </li>
          <li class="py-3 list-group-item d-flex justify-content-between lh-sm">
            <div>
              <h6 class="my-0">Amount</h6>
            </div>
            <span class="text-muted">500.000 VNĐ</span>
          </li>

          <li class="py-3 list-group-item d-flex justify-content-between bg-light">
            <div>
              <h6 class="my-0">Transaction fee</h6>
            </div>
            <span class="text-muted">25.000VNĐ</span>
          </li>

          <li class="list-group-item d-flex justify-content-between lh-sm text-success">
            <div>
              <h6 class="my-0">Total</h6>
            </div>
            <span>525.000 VNĐ</span>
          </li>

          <li class="py-3 list-group-item d-flex justify-content-between bg-light">
            <div>
              <h6 class="my-0">Note</h6>
            </div>
            <span class="text-muted">Lorem Ipsum is simply dummy...</span>
          </li>
        </ul>

        <button class="w-100 btn btn-lg btn-primary" type="submit">Send</button>

      </div>
    </div>
  </main>

  
</body>